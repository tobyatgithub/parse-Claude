{
  "manifest_version": 3,
  "name": "parse-Claude",
  "version": "1.0.0",
  "description": "A Chrome extension for easily exporting conversations from Claude",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "clipboardWrite"
  ],
  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.anthropic.com/*"],
      "css": ["src/styles/content.css"],
      "js": ["src/content.js"]
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
} 